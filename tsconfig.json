{
  "include": [
    "src/**/*.ts"
  ],
	"exclude": [
		"src/android.ts",
    "src/ios.ts"
	],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "allowJs": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
