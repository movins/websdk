{
	"include": [
		"lib/**/*.ts"
	],
	"exclude": [
		"lib/**/*.d.ts",
		"lib/test/**/*.ts",
    "lib/test.ts"
	],
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"ESNext",
			"DOM"
		],
		"sourceMap": false,
		"allowJs": false,
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"declarationDir": "./dist",
		"declaration": true,
		"emitDeclarationOnly": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}
